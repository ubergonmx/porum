{{>header}}
<main>
    <div id="main-post" class="def-container">
        <div id="content-box" class="def-container">
            <div class = "content">
            <div id="post-header">
                <a href="users/{{discussion.author._id}}">
                    <img src="../{{discussion.author.profileImg}}" id="profile-pic">
                </a>
            </div>
                
            <div>
                <div>
                    <h1 id="title-text">{{title}}</h1></div>
                    <span id="username-text">{{discussion.author.username}}</span>
                    <span id="date-text"> &bull; {{formatDate discussion.createdAt}}</span>
                </div>
            </div>
                
            <div><h3 id="content-text">{{content}}</h3></div>          
            <div id="options">
                <div id="comment" class="text-clickable"><i class="fa-solid fa-message"></i><span id="commenters"> {{this.commentNo}} Comments</span></div>
                <div id="share" class="text-clickable"><i class="fa-solid fa-share"></i><span id="share"> Share</span></div>
                {{#if isCurrentUser}}
                    <div id = "edit" class="text-clickable"><i class="fa-solid fa-pen-to-square"></i><span id="edit"> Edit</span></div>
                {{else}}
                    <div id="follow" class="text-clickable"><i class="fa-solid fa-star"></i><span id="follow"> Follow</span></div>
                {{/if}}
            </div>
        </div>


        <!-- Text Box -->
        <div id="content-box" class="def-container">
            <textarea type="text" id="comment-input" name="comment-input" class="comment-input"></textarea>
            <div class = "comment-button">
                <button id="create-button" class="button-primary">Comment</button>
            </div>
        </div>

        {{#if comments}}
        {{#each comments}}
            {{>comment}}
        {{/each}}
        {{else}}
            <p>No comments...</p>
        {{/if}}
    </div>
</main>