{{>header}}
<main>
    <section>
        <div id="posts-box" class="def-container">            
            <div id = "filter-box" class="def-container">
                <div class = "filter-icon">
                    <i class="fa-solid fa-eye"></i>
                    <p class = "filter-name" class="chosen">Overview</p>
                </div>

                <div class = "filter-icon">
                    <i class="fa-solid fa-pen"></i>
                    <p class = "filter-name">Posts</p>
                </div>

                <div class = "filter-icon">
                    <i class="fa-solid fa-message"></i>
                    <p class = "filter-name">Comments</p>
                </div>

                <div class = "filter-icon">
                    <i class="fa-solid fa-star"></i>
                    <p class = "filter-name">Following</p>
                </div>
            </div>    
            <div id = "posts-container">    
                {{#if discussions.length}}
                    {{#each discussions}}
                        {{>discussion-preview}}
                    {{/each}}
                {{else}}
                    <div id="scaffold">
                        <img src="../images/design/404.png">
                        <h1 id="text-title">No discussions yet</h1>
                    </div>
                {{/if}}
            </div>
        </div>
    </section>

    <aside>
        <div id="profile-box" class="def-container">
            <div id="profile-header">
                <img id="cover-photo" src="../{{profile.coverImg}}">
                <img id="profile-pic" src="../{{profile.profileImg}}">
                {{#if isCurrentUser}}
                <a href = "/settings">
                    <i class="fa-solid fa-gear settings-button"></i>
                </a>
                {{/if}}
            </div>

            <div id="profile-content">
                <h1 id="full-name" class="header-format">{{profile.firstname}} {{profile.lastname}}</h1>
                <h4 id="username" class="header-format">{{profile.username}}</h3>
                    <h5 class="bio-format"><span id="bio">{{profile.bio}}</span> </h5>
                <div class="other-info">
                    <div><h4>Birthday: <br><span id="birthday">{{#if profile.birthday}}{{birthday profile.birthday}}{{else}}-{{/if}}</span> </h4></div>
                    <div><h4>Phone Number: <br><span id="phone-number">{{#if profile.phoneNumber}}{{profile.phoneNumber}}{{else}}-{{/if}}</span> </h4></div>
                </div>

                {{#if isCurrentUser}}
                <!-- New post button redirect to start discussion -->
                <a href = "/startdiscussion">
                    <button id="settings" class="button-primary">New Post</button>
                </a>
                {{/if}}
            </div>
        </div>
    </aside>
</main>